{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "webpack"
  ]
}