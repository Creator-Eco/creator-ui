{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm5",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    // "webpack"
  ]
}